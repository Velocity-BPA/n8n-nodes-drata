{
  "name": "n8n-nodes-drata",
  "version": "1.0.0",
  "description": "A comprehensive n8n community node for Drata compliance automation platform providing 12 resources and 60+ operations for compliance monitoring, evidence collection, personnel management, and risk tracking.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-drata.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-drata#readme",
  "bugs": {
    "url": "https://github.com/Velocity-BPA/n8n-nodes-drata/issues"
  },
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "drata",
    "compliance",
    "soc2",
    "iso27001",
    "hipaa",
    "gdpr",
    "pci-dss",
    "security",
    "automation",
    "evidence",
    "risk-management",
    "vendor-management"
  ],
  "main": "dist/nodes/Drata/Drata.node.js",
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/DrataApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Drata/Drata.node.js",
      "dist/nodes/Drata/DrataTrigger.node.js"
    ]
  },
  "files": [
    "dist",
    "LICENSE",
    "COMMERCIAL_LICENSE.md",
    "LICENSING_FAQ.md"
  ],
  "scripts": {
    "build": "tsc && npm run copy:icons",
    "copy:icons": "cp nodes/Drata/*.svg dist/nodes/Drata/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.32.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "n8n-workflow": ">=1.0.0"
  },
  "engines": {
    "node": ">=18.10.0"
  }
}
